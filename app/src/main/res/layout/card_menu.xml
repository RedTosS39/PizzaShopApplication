<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.5dp"
>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_margin="16dp"
            android:src="@drawable/common_google_signin_btn_icon_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCardLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:fontFamily="@font/roboto_bold"
            android:text="card label"
            android:textColor="@color/label_color"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/tvCardContent"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/sf_ui_display_reg"
            android:text="@string/card_content"
            android:paddingEnd="20dp"
            android:textSize="14sp"
            android:textColor="@color/description_color"
            app:layout_constraintStart_toStartOf="@+id/tvCardLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvCardLabel" />

        <TextView
            android:id="@+id/tvCardPrice"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:layout_marginHorizontal="18dp"
            android:background="@drawable/price_back"
            android:fontFamily="@font/sf_ui_display_reg"
            android:padding="8dp"

            android:text="@string/card_price"
            android:textColor="@color/selected_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCardContent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>